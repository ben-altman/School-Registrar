<%= form_with(model: @teacher, url: signup_path) do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %>
    <br/><br/>
    <%= f.label :email %>:
    <%= f.text_field :email %>
    <br/><br/>
    <%= f.label :password %>:
    <%= f.password_field :password %>
    <br/><br/>
    <%= f.label :password_confirmation, "Confirm Password" %>: 
    <%= f.password_field :password_confirmation %>
    <br/><br/>
    <%= f.submit "Submit" %>

<% end %>