<h1><%= @course.title %></h1>

Subject area: <%= link_to "#{@course.subject.name}", subject_path(@course.subject) %>
<br/>
Prerequisites: <%= @course.prerequisites %>
<br/>
Teacher: <%= link_to "#{@course.teacher.name}", teacher_path(@course.teacher) %>
<br/>
Requirements: 
<% @course.requirements.each do |r| %>
    <%= r.name %><br/>
<% end %>
<br/><br/>
<%= link_to "Edit Course", edit_course_path(@course) %>
<%= link_to "Delete Course", course_path(@course), method: :delete %>


